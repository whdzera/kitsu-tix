<div class="container mx-auto px-4">
  <h2 class="text-2xl font-bold text-center mb-6 mt-6">
    Registration
  </h2>
  <div class="flex justify-center">
    <div class="w-full md:w-1/3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="my-4"></div>
        <div class="mb-4">
          <div class="relative">
            <%= f.email_field :email, autocomplete: "email", 
              class: "w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400", 
              placeholder: "Email" %>
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-500 dark:text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </span>
          </div>
        </div>
        <div data-controller="password-match">
          <div class="mb-4" data-controller="toggle-password">
            <div class="relative">
              <%= f.password_field :password, autocomplete: "new-password", 
                class: "w-full pl-10 pr-10 py-2 rounded-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400", 
                placeholder: "Password", 
                id: "password-field", 
                data: { "toggle-password-target": "password", 
                        "password-match-target": "password", 
                        "action": "input->password-match#check" } %>
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-500 dark:text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </span>
              <span class="absolute inset-y-0 right-0 flex items-center pr-3 cursor-pointer text-gray-500 dark:text-gray-400" 
                data-action="click->toggle-password#toggle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" data-toggle-password-target="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </span>
            </div>
            <p data-password-match-target="message" class="text-sm text-red-500 mt-1 hidden"></p>
          </div>
          <div class="mb-4" data-controller="toggle-password">
            <div class="relative">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                class: "w-full pl-10 pr-10 py-2 rounded-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400", 
                placeholder: "Password Confirmation", 
                id: "password-confirmation-field", 
                data: { "toggle-password-target": "password", 
                        "password-match-target": "passwordConfirmation", 
                        "action": "input->password-match#check" } %>
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-500 dark:text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </span>
              <span class="absolute inset-y-0 right-0 flex items-center pr-3 cursor-pointer text-gray-500 dark:text-gray-400" 
                data-action="click->toggle-password#toggle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" data-toggle-password-target="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </span>
            </div>
          </div>
        </div>
        <div class="mb-6 mt-6">
          <label class="flex items-center">
            <input type="checkbox" class="mr-2 rounded border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-blue-400" />
            <span class="text-gray-700 dark:text-gray-300">Term and Condition</span>
          </label>
        </div>
        <div class="mb-4">
          <div>
            <%= f.submit "Sign Up", class: "w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white font-medium rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center mb-6 mt-6">
    <a href="/users/sign_in" class="text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">Login</a>
  </div>
</div>