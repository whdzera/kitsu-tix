<div class="container mx-auto mb-8 px-4">
  <h2 class="text-2xl font-bold text-center mb-6 mt-6">
    Change Your Password
  </h2>
  <div class="flex justify-center">
    <div class="w-full md:w-1/3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 border border-gray-200 dark:border-gray-700" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-4"></div>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-4" data-controller="toggle-password">
          <div class="relative">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full pl-10 pr-10 py-2 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "New Password", id: "password-field", data: { toggle_password_target: "password" } %>
            
            <div class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </div>
            
            <div class="absolute inset-y-0 right-3 flex items-center cursor-pointer" data-action="click->toggle-password#toggle">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-gray-500" data-toggle-password-target="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>
          </div>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
        </div>

        <div class="mb-6" data-controller="toggle-password">
          <div class="relative">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full pl-10 pr-10 py-2 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Confirm New Password", id: "password-confirmation-field", data: { toggle_password_target: "password" } %>
            
            <div class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </div>
            
            <div class="absolute inset-y-0 right-3 flex items-center cursor-pointer" data-action="click->toggle-password#toggle">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-gray-500" data-toggle-password-target="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>
          </div>
        </div>

        <div class="mb-4">
          <div class="w-full">
            <%= f.submit "Change My Password", class: "w-full px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out dark:bg-blue-600 dark:hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>