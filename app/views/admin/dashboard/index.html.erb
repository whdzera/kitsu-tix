<!-- Fixed User Management HTML -->
<div class="container mx-auto p-4">
  <div class="rounded-lg bg-white/5 dark:bg-gray-800/5 backdrop-blur p-6">
    <div data-controller="user-management">
      <div class="rounded-md bg-white/10 dark:bg-gray-800/10 p-5 text-gray-800 dark:text-white">
        <h3 class="text-lg font-semibold mb-4 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          Users Management
        </h3>
        
        <!-- Filter and Search Controls -->
        <div class="flex flex-wrap gap-3 mb-4">
          <div class="w-full sm:w-auto">
            <select id="filtered-users"
                data-user-management-target="filter" 
                data-action="change->user-management#filterRole"
                class="w-full sm:w-auto text-sm rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white py-1 px-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Filter by Role</option>
              <option value="admin">Admin</option>
              <option value="member">Member</option>
            </select>
          </div>
          <div class="grow">
            <input id="search_users"
              class="w-full text-sm rounded border border-gray-300 dark:border-gray-600 bg-transparent text-gray-800 dark:text-white py-1 px-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
              type="text" 
              placeholder="Search users..." 
              data-user-management-target="search" 
              data-action="input->user-management#search">
          </div>
        </div>
        
        <!-- Table Container with Proper Overflow Handling -->
        <div class="overflow-x-auto shadow rounded-lg">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 text-gray-800 dark:text-gray-200" data-user-management-target="table">
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Username
                  </div>
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Email
                  </div>
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                    Role
                  </div>
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Joined
                  </div>
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Actions
                  </div>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
              <% @users.first(10).each do |user| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                  <td class="px-4 py-3 whitespace-nowrap"><%= user.username %></td>
                  <td class="px-4 py-3 whitespace-nowrap"><%= user.email %></td>
                  <td class="px-4 py-3 whitespace-nowrap"><%= user.role.capitalize %></td>
                  <td class="px-4 py-3 whitespace-nowrap"><%= user.created_at.strftime("%b %d, %Y") %></td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <div class="flex space-x-2">
                      <%= link_to admin_edit_user_path(user), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 p-1" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <% if user != current_user %>
                        <%= button_to admin_delete_user_path(user), method: :delete,
                        onclick: "return confirm('Are you sure you want to update?')",
                        class: "text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 p-1", 
                        form: { style: 'display: inline-block;' } do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                        <% end %>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
                          Current
                        </span>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Load More Button with Improved Styling -->
        <% if @users.count > 10 %>
          <div class="flex justify-center mt-6">
            <button class="px-4 py-2 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded-md shadow transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                data-user-management-target="loadMore"
                data-action="click->user-management#loadMore"
                data-page="1" 
                data-total="<%= @users.count %>"
                data-path="<%= admin_dashboard_path %>"
                data-current-user-id="<%= current_user.id %>">
              Load More Users
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>